{
  "compilerOptions": {
    "target": "es2022",
    "module": "es2022",
    "moduleResolution": "node",
    "declaration": true,
    "emitDeclarationOnly": false,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "moduleDetection": "force",
    "strict": true,
    "allowJs": true,
    "skipLibCheck": false,
    "lib": ["ES2022", "DOM"],
    "paths": {
      "ridb-rust": ["../pkg"]
    }

  },
  "include": [
    "src/**/*",
    "node_modules/@trust0/ridb-wasm/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
